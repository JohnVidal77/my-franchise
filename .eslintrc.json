{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "prettier",
    "prettier/@typescript-eslint",
    "prettier/react"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "import/extensions": 0,
    "import/no-unresolved": 0,
    "no-nested-ternary": 0,
    "react/jsx-props-no-spreading disable": 0,
    "react/prop-types": 0,
    "react/jsx-filename-extension": [
      2,
      {"extensions": [".js", ".jsx", ".ts", ".tsx"]}
    ]
  }
}
